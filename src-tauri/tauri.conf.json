{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "The Ball",
  "version": "0.1.0",
  "identifier": "com.theball.app",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "The Ball",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "permissions": [
            "core:default",
            "core:webview:allow-internal-toggle-devtools"
          ]
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist"
    }
  }
}